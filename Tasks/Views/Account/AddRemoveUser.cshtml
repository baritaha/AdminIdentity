@model IList<Tasks.Models.ViewModles.UserRoleViewModel>

@{
    ViewData["Title"] = "AddRemoveUser";
}

<h1>Add / Remove User</h1>
<form asp-action="AddRemoveUser" method="post" asp-controller="Account">
<div class="card-container">
    <div class="card-header">Users in this Role</div>
    @for (int i= 0 ;i <Model.Count;i++)
    {
        <div class="card">

            <img class="card-img-top" src="/images/admin.png" alt="Card image" style="width: 10%">
            <div class="card-body">
                <input type="hidden" asp-for="@Model[i].UserId">
                <input type="hidden" asp-for="@Model[i].UserName">
                <input asp-for="@Model[i].IsSelected" class="form-check-input">
                <label asp-for="@Model[i].UserName">@Model[i].UserName</label>
                <div class="d-flex">
                   
                  
                </div>

            </div>
        </div>
    }
    <div class="card-footer">
     <input type="submit" value="save" class="btn btn-outline-primary">
     <a  asp-action="RoleList"  class="btn btn-outline-danger">Cancel</a>
     </div>
</div>

</form>