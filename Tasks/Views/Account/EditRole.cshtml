@model Tasks.Models.ViewModles.EditRoleModel

@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<h4>EditRoleModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />  <a asp-action="RoleList">cancel</a>
            </div>

            
        </form>
    </div>
</div>

<div>
   
</div>
@if (Model.usersNames.Any())
{
    <h1>User In This List</h1>
    @foreach (var user in Model.usersNames)
    {
        <div class="card bg-info text-white">
            <div class="card-body">@user</div>
        </div>
    }
    <div class="card-footer">
        <a class="btn btn-info" asp-controller="Account" asp-action="AddRemoveUser"
       asp-route-id="@Model.RoleId">
            <span class="spinner-grow spinner-grow-sm"></span>
            Add or Remove Useres From Role
        </a>
    </div>
    
}
else
{
    <div class="card bg-danger text-white">
        <div class="card-body">No User  In This List Role</div>
    </div>
    <div class="card-footer">
        <a class="btn btn-info" asp-controller="Account" asp-action="AddRemoveUser"
       asp-route-id="@Model.RoleId">
            <span class="spinner-grow spinner-grow-sm"></span>
            Add or Remove Useres From Role
        </a>
    </div>
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
